<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/studentSignup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activities.StudentSignUpActivity">

    <ImageView
        android:id="@+id/studentSignupIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/baseline_school_24" />

    <TextView
        android:id="@+id/studentSignupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/studentSignupIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/student_account"
        android:textAlignment="center"
        android:textColor="@color/darkGreen"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/studentSignupLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/studentSignupTitle"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/studentSignupID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="username"
            android:backgroundTint="@color/green"
            android:hint="Student ID number"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/studentSignupPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="password"
            android:backgroundTint="@color/green"
            android:hint="Pin"
            android:inputType="numberPassword" />

        <EditText
            android:id="@+id/studentSignupConfirmPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="password"
            android:backgroundTint="@color/green"
            android:hint="Confirm pin"
            android:inputType="numberPassword" />

        <EditText
            android:id="@+id/studentSignupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="name"
            android:backgroundTint="@color/green"
            android:hint="Student name"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Button
        android:id="@+id/studentSignupCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentSignupLinearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/darkGreen"
        android:text="@string/create_account"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/atachiz02_softwares"
        android:textColor="@color/darkGreen"
        android:textSize="14sp"
        android:textStyle="italic" />

</RelativeLayout>