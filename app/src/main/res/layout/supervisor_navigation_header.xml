<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navProfilePic"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/avatar"
        app:civ_border_color="@color/green"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/navName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/navProfilePic"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/navAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/navProfilePic"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/navPostCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/navAddress"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/navProfilePic"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/navBloodGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/navAddress"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>